        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@+id/textViewTime"
        android:layout_toRightOf="@+id/imageView"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adfasdfasdfasdf"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="sdfasdfsadf"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="lorem ipsum lkasdjflhasldhflasdhflh lkjdahslkfjhalskjdhf  laskjdhflkjahsldkjfhasdf lkjasdhflhjjd   lkjsadfhlhdf  salkdjfhlhdf lajsdhflk"
            android:textSize="12sp" />
    </LinearLayout>

    <com.netforceinfotech.tripsplit.general.VerticalTextView

        android:id="@+id/textViewTime"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|left"
        android:background="@color/darkpurple"
        android:gravity="bottom|center_horizontal"
        android:textColor="@color/colorAccent" />


</RelativeLayout>