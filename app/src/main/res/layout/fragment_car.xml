<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/flight_view_background"

        ></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/iteninary_editext_border"
            android:hint="Travel To"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColorHint="@color/red"
            android:layout_marginRight="5dp"
            android:layout_weight="50"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/iteninary_editext_border"
            android:hint="Travel From"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColorHint="@color/red"
            android:layout_marginLeft="5dp"
            android:layout_weight="50"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date_text"
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:hint="Select Date"
            android:textSize="18dp"
            android:background="@drawable/iteninary_editext_border"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:weightSum="90"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="30"
            android:src="@drawable/ic_refine"
            />

        <Button
            android:id="@+id/sortbutton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="30"
            android:background="@drawable/button_border_back"
            android:text="Sort"
            android:textAllCaps="false"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/ic_arrow"
            />


        <Button
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="30"
            android:layout_marginTop="3dp"
            android:background="@drawable/button_border_back"
            android:text="Globe"
            android:textAllCaps="false"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_arrow"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_background"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            ></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>
